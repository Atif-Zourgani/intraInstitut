{% extends 'base.html.twig' %}
{% block title %}IntraInstitut - Produit{% endblock %}
{% block body %}

    <main class="displayCenter imgGalerieShow">

        <div class="txtCenter showGalerie PosRela">
            <h4>{{ product.name }}</h4>

            <div>ref:{{ product.ref }}. {{ product.quantity }} produit disponible</div>

            {% if product.quantity == 0 %}
                <p class="errorMessage">Rupture de stock.</p>
            {% endif %}

            <img class="imgGalerieShowSize" alt=" {{ product.galerie.alt }}" src="{{ asset('asset/galerie/' ~ product.galerie.img) }}">

            <p>{{ product.description }}</p>

            <a class="loginLien PosAbso showLienBack" href="{{ path('product') }}">Retour</a>
            {#<a class="loginLien PosAbso showLienDownload" href="">Télécharger</a>#}
            <a class="loginLien PosAbso showLienAccueil" href="{{ path('accueil') }}">Accueil</a>
            {% if is_granted("ROLE_ADMIN") %}
                <a class="showLienSupp loginLien PosAbso" href="{{ path('admin_product_delete_id', {'id' : product.id}) }}" type="submit" value="Supprimer">Supprimer </a>
                <a class="showLienModif loginLien PosAbso" href="{{ path('admin_product_update_id', {'id' : product.id}) }}" type="submit" value="Modifier">Modifier </a>
            {% endif %}
        </div>

    </main>

{% endblock %}